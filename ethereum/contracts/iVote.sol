contract iVote is Ownable{
    using Counters for Counters.Counter;

    using SafeMath for uint;
    
  Counters.Counter public  _electionIdTracker; 
 constructor(){}
 
 struct election{
    uint256 numberOfCandidates; 
    string[] namesOfCandidates;
    uint256 duration;
    uint256 startTime;
    bool isActive;
 }
 
 mapping(uint256 => election) public idToElection;
 mapping(uint256 => mapping( string => uint256)) public candidateVotes;
 mapping(uint256 => mapping( address => bool)) public hasVoted;
 
 event electionCreated(uint256 id, string[] name);
 event voted(uint256 id, string name, address voter);
 event electionCancelled(uint256 electionId);
 function startElection(uint256 numberOfCandidates, string[] memory namesOfCandidates, uint256 duration) external onlyOwner {  
      _electionIdTracker.increment();
      uint256 electionId = _electionIdTracker.current();
      require(numberOfCandidates == (namesOfCandidates.length),"Number of candidates should be equal to number of names");
      idToElection[electionId] = election({
          numberOfCandidates: numberOfCandidates,
          namesOfCandidates: namesOfCandidates,
          duration: duration,
          startTime: block.timestamp,
          isActive:true
      });
   emit electionCreated(electionId, namesOfCandidates);   
}

function returnCandidatesForElection(uint256 _electionId) public view returns(string[] memory){
    return idToElection[_electionId].namesOfCandidates;
}
function voteForCandidate(uint256 electionId, string memory candidate, bool panic) external isValidCandidate( electionId, candidate){
    require(block.timestamp < idToElection[electionId].startTime.add(idToElection[electionId].duration),"Election has ended" );
    require(hasVoted[electionId][msg.sender] == false," user has already voted");
    require(idToElection[electionId].isActive == true,"Election is not active");
    if(panic == false){
        candidateVotes[electionId][candidate]= candidateVotes[electionId][candidate].add(1);
        hasVoted[electionId][msg.sender] = true;
    }
    emit voted(electionId, candidate, msg.sender);
}

function cancleElection(uint256 electionId) external onlyOwner{
    require(electionId<= _electionIdTracker.current(),"electionId doesn't exist");
    require(block.timestamp < idToElection[electionId].startTime.add(idToElection[electionId].duration),"Election has already ended" );
    idToElection[electionId].isActive = false;
    emit electionCancelled(electionId);
}

modifier isValidCandidate(uint256 electionId, string memory candidate){
    string[] memory candidates = idToElection[electionId].namesOfCandidates;
    bool valid;
    for(uint256 i = 0; i<candidates.length;i++){
        if((keccak256(bytes(candidates[i]))==keccak256(bytes(candidate)))){
            valid = true;
            _;
                }
    }
}
 
